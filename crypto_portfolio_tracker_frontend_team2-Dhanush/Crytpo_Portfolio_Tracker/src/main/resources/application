# Application Configuration
spring.application.name=Crytpo_Portfolio_Tracker

# Database Configuration (MySQL)
spring.datasource.url=jdbc:mysql://localhost:3306/crypto_portfolio_tracker?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=your_password_here
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# JWT Configuration
jwt.secret=mySecretKey123456789012345678901234567890
jwt.expiration=86400000 # 24 hours in milliseconds

# Server Configuration
server.port=8080

# Logging Configuration
logging.level.com.Crytpo_Portfolio_Tracker=DEBUG
logging.level.org.springframework.security=DEBUG

# Binance API Configuration (for testing)
binance.api.key=your_binance_api_key_here
binance.api.secret=your_binance_api_secret_here
binance.testnet=true

# Crypto ScamDB Configuration
cryptoscamdb.api.url=https://api.cryptoscamdb.org/v1/
cryptoscamdb.api.key=your_cryptoscamdb_api_key_here